@model OperationDigger.Models.MainModel

@{
    ViewBag.Title = "Delete Records";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete</title>
</head>
<body>
    <!--still need info from the model for the view to work-->

    <h3>Are you sure you want to delete this record?</h3>
    <div>
  
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.BurialId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Location)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DateofDeath)
            </dt>
            
        </dl>
        
        <form asp-action="Delete">
            <input type="hidden" asp-for="BurialId" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a class="btn btn-primary" asp-action="BurialRecord">Back to List</a>
        </form>
    </div>
</body>
</html>
