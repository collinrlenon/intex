@{ ViewBag.Title = "Add New Notes";

}
@model OperationDigger.Models.Notes


 *@* adding notes about the mummy*@

<h2>Add Notes</h2>
<hr />
<div class="container">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <form asp-action="AddQuotes">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="NotesId" />
                <div class="form-group">


                    <label asp-for="MainNotes" class="control-label"></label>
                    <input asp-for="MainNotes" class="form-control" />
                    <span asp-validation-for="MainNotes" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="Date" class="control-label"></label>
                    <input asp-for="Date" class="form-control" />
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Add Notes" class="btn btn-primary" />  

                </div>
            </form>

        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}



