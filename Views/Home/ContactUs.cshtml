@{
    ViewData["Title"] = "Contact Us";
}

<body class="contact-page">
    <section class="heading-section section section-on-bg">
        <div class="hero-wrapper">
            <div class="hero-holder"></div>
            <div class="hero-mask-solid"></div>
        </div><!--//hero-wrapper--> 
        <div class="container heading-content">             
            <h2 class="headline">Get in Touch</h2>
            <div class="meta">Weâ€™d love to hear from you. We appreciate your feedback, <br class="d-none d-md-block">feel free to write us an email. We'll do our best to get back to you right away. Thank you. </div>
        </div><!--//container-->
    </section><!--//heading-section-->
    
    <div class="contact-methods">
        <div class="container">
            <div class="row">
                <div class="item col-12 col-md-6">
                    <div class="item-inner">
                        <h4 class="item-title"><i class="fas fa-life-ring" aria-hidden="true"></i> Get Support</h4>
                        <div class="item-content">If you have any questions or problems with our product please visit our <a  class="text-link" asp-controller="Home" asp-action="SupportPage">Support Center</a>.</div>
                    </div><!--//item-inner-->
                </div><!--//item-->
                
                <div class="item col-12 col-md-6">
                    <div class="item-inner">
                        <h4 class="item-title"><i class="fas fa-phone-volume" aria-hidden="true"></i> Emails us</h4>
                        <div class="item-content">Email us any questions or concerns you have. Contact our team at <a class="text-link">wayofthewaterbuffalo@byu.edu</a>.</div>
                    </div><!--//item-inner-->
                </div><!--//item-->
                
                <div class="item col-12 col-md-6">
                    <div class="item-inner">
                        <h4 class="item-title"><i class="fas fa-file-archive" aria-hidden="true"></i> BYU Inquiries</h4>
                        <div class="item-content">If you would like to learn how to properly address BYU when writing official stories or coverage please review our press kit. <a  class="text-link" href="support.html">Download our press kit</a>.</div>
                    </div><!--//item-inner-->
                </div><!--//item-->
                
                <div class="item col-12 col-md-6">
                    <div class="item-inner">
                        <h4 class="item-title"><i class="fas fa-users" aria-hidden="true"></i> Partnership Inquiries</h4>
                        <div class="item-content">If you would like to become a researcher at BYU then please fill out the information below. <a  class="text-link" href="support.html">Use the contact form below</a>.</div>
                    </div><!--//item-inner-->
                </div><!--//item-->
                
            </div><!--//row-->
        </div><!--//container-->
    </div><!--//contact-methods-->
    
    <div class="form-block">
        <form id="contact-form" class="contact-form" method="post" action="">   
            <h3 class="form-title text-center">Quick Contact Form</h3>                 
            <div class="row">                                                           
                <div class="form-group col-12 col-md-6">
                    <label class="sr-only" for="cname">Name</label>
                    <input type="text" class="form-control" id="cname" name="name" placeholder="Name" minlength="2" required="" aria-required="true">
                </div>                    
                <div class="form-group col-12 col-md-6">
                    <label class="sr-only" for="cemail">Email</label>
                    <input type="email" class="form-control" id="cemail" name="email" placeholder="Email" required="" aria-required="true">
                </div>
                <div class="form-group col-12">
                    <label class="sr-only" for="cmessage">Your message</label>
                    <textarea class="form-control" id="cmessage" name="message" placeholder="Enter your message" rows="12" required="" aria-required="true"></textarea>
                </div>
                <div class="form-group col-12">
                    <button type="submit" class="btn w-100 btn-cta btn-primary">Send</button>
                </div>                           
            </div><!--//row-->
            <div id="form-messages"></div>
        </form><!--//contact-form-->
    </div><!--//form-block-->
</body>