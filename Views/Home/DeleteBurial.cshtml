@model Burial

@{
    ViewData["Title"] = "Delete Burial";
}

<body class="job-single-page">
    <section class="heading-section section section-on-bg">
        <div class="hero-wrapper">
            <div class="delete-hero-holder"></div>
            <div class="hero-mask-gradient"></div>
        </div><!--//hero-wrapper-->
        <div class="container heading-content">
            <h2 class="headline">@ViewData["Title"]</h2>
            <div class="meta">Are you sure you want to delete this record?</div>
        </div><!--//container-->
    </section><!--//heading-section-->

    <div id="job-single-block">
        <div class="job-details">
            <div class="cta-container text-center">
                <!--Form that will pass the data to the next view-->
                <div class="container">
                    <div class="row">
                        <div class="col-sm-10 mx-auto shadow-lg m-5 rounded" style="border: 3px solid black; background-color: #E4D4C8;max-width: 80%;">
                            <div>
                                <form asp-action="DeleteBurial">
                                    <input type="hidden" asp-for="BurialId" />
                                    <input class="button btn btn-lg btn-danger px-4 pt-2 float-right" style="font-size:xx-large!important;margin:10px!important;" type="submit" value="Yes" />
                                    <a class="button btn btn-lg btn-success px-4 pt-2 float-right" style="font-size:xx-large!important;margin:10px!important;" asp-action="BurialList">No</a>
                                </form>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div><!--//job-details-->
    </div><!--//job-single-->
    <!-- Javascript -->
    <script src="assets/plugins/popper.min.js"></script>
    <script src="assets/plugins/bootstrap/js/bootstrap.min.js"></script>
    <script src="assets/plugins/vanilla-back-to-top.min.js"></script>
    <script src="assets/plugins/smoothscroll.min.js"></script>
    <script src="assets/js/main.js"></script>

    <div class="m-3">
        <a class="button btn btn-sm btn-secondary px-4 pt-2 float-right" style="font-size:small!important;margin:10px!important" asp-action="BurialDetails" asp-route-id="@Model.BurialId">Go to Burial Details</a>
    </div>

</body>