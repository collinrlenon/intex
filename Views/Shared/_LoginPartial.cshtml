@using Microsoft.AspNetCore.Identity
@inject SignInManager<OperationDiggerUser> SignInManager
@inject UserManager<OperationDiggerUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a  class="nav-link text-light" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>
    </li>
    <li class="nav-item nav-item-cta last">
        <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="btn-signup">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link login-trigger" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
    <li class="nav-item nav-item-cta last">
        <a class="btn-signup" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
}
</ul>
